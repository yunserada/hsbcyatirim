            if ($("#ddlStocksPeriod").val() == "1")
                urlapi = "/api/hsbcdata/getDailyForeksGraphData?code=";
            var url = urlapi + $("#ddlStocksCode").val() + "&currency=" + $("#ddlStocksCurrency").val() + "&period=" + $("#ddlStocksPeriod").val();
            var date = "DD.MM.YYYY";

            $.get(url).then(function (result, responseText, jqXHR) {

                if (jqXHR.status == 204) {
                    HSBC.WarningCode204($("#chartStocks"));
                    return false;
                }
                site.Chart.create('chartStocks', result.GraphData, { type: "default", date: date, money: 0 },"Hisse Senedi Piyasaları", "Hisse Senedi Piyasaları");
                $("#ForeksLastValue").text(result.LastValue.toString().money(2));
                $("#ForeksPreviousValue").text(result.PreviousValue.toString().money(2));
                $("#ForeksChangeRate").text(result.ChangeRate.toString().percent());
                $("#ForeksDate").text(moment(result.Date).format("HH:mm:ss"));
                $("#ForeksTransactionVolume").text(result.TransactionVolume.toString().money(2));
            });
        }).trigger("click");
    </script>






    
		
